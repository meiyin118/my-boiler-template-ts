{
  "name": "my-boiler2",
  "version": "1.0.0",
  "description": "npm scriptsのボイラーテンプレート",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "sass": "sass src/scss/:dist/css/ --no-source-map --watch",
    "compile:ejs2html": "ejs-cli -b src/ejs/ \"/**/*.ejs\" -o dist/",
    "watch:ejs2html": "chokidar \"src/ejs/\" -c \"npm run compile:ejs2html\" --initial",
    "compile:scss2cssprefix": "postcss dist/css/*.css -u autoprefixer -o dist/css/*.css",
    "watch:ts": "tsc -w",
    "watch:img": "chokidar \"src/image/**/*\" --command \"node imagemin.js\" --initial",
    "start:server": "browser-sync start -s dist -w src/*.html src/css/*.css src/js/*.js",
    "start": "run-p watch:ejs2html sass compile:scss2cssprefix watch:ts watch:img start:server"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.1",
    "browser-sync": "^2.27.7",
    "chokidar-cli": "^3.0.0",
    "ejs-cli": "^2.2.3",
    "imagemin-cli": "^7.0.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "sass": "^1.45.2",
    "typescript": "^4.5.4"
  }
}
